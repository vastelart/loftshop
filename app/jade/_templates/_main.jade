
- var socials = ['fb', 'vk', 'tw']
- var socialsLinks = {fb: 'facebook.com/cooltech', vk: 'vk.com/cooltech', tw: 'twitter.com/cooltech'}
- var extras = ['Карта проезда', 'История заказов', 'Корзина']
- var mainNav = ['Планшеты', 'Мобильные телефоны', 'MP3-плееры', 'Персональные компьютеры', 'Ноутбуки', 'Аксессуары', 'Бытовая техника']
- var colors = ['white', '#cccccc', 'black', '#0a3153', '#ff1800', '#fff343', '#fb914a', '#92c37c', '#40a6ff', '#9870ad', '#dc78ad', '#7f401d']
- var os = ['Android', 'iOS', 'Windows Mobile', 'Symbian', 'Custom']
- var brands = ['Lenovo', 'Apple', 'Samsung', 'Asus', 'Motorola']

mixin socialsList(classes, links, blockClass, element, linkClass)
	ul(class="#{blockClass}")
		each social in socials
			- var linkTo = socialsLinks['' + social + '']
			li(class="#{element}")
				a(class="#{linkClass} #{linkClass}_#{social}", href="http://#{linkTo}")
					span.text-hide= linkTo

mixin listSet(blockClass, element, linkClass, linkText)
	ul(class="#{blockClass}")
		each text in linkText
			li(class="#{element}")
				a(class="#{linkClass}", href="#") #{text}

mixin fieldsetMix(vals, inputType)
	each val, index in vals
		label #{val}
			input(type="#{inputType}", value="")

doctype html

html
	include ../_blocks/_head
	body
		include ../_blocks/_header

		//Основной контент
		.content.container.clearfix
			block left

			block right

			block about


		.container
			include ../_blocks/_info


			//Футер
			footer.footer
				.container
					h1.footer-logo COOLTECH

					//Социальные сети
					+socialsList(socials, socialsLinks, 'footer-socials', 'footer-socials__item', 'footer-socials__link')

					//Футер - навигация по магазину
					+listSet('footer-navigation', 'footer-navigation__item', 'footer-navigation__link', mainNav)
					
					//Копирайт
					.copyright All rights reserved. 2015. no copy alowed


		script(src="/bower/jquery/jquery.min.js")