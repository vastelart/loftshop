doctype html

- var socials = ['fb', 'vk', 'tw']
- var socialsLinks = {fb: 'facebook.com/cooltech', vk: 'vk.com/cooltech', tw: 'twitter.com/cooltech'}
- var extras = ['Карта проезда', 'История заказов', 'Корзина']
- var mainNav = ['Планшеты', 'Мобильные телефоны', 'MP3-плееры', 'Персональные компьютеры', 'Ноутбуки', 'Аксессуары', 'Бытовая техника']
- var colors = ['white', '#cccccc', 'black', '#0a3153', '#ff1800', '#fff343', '#fb914a', '#92c37c', '#40a6ff', '#9870ad', '#dc78ad', '#7f401d']

mixin socialsList(classes, links, block, element)
	ul(class="#{block}")
		each social in socials
			li(class="#{element}")
				a(class="#{social}", href="#")
					span.text-hide= socialsLinks['' + social + '']

mixin listSet(block, element, linkClass, linkText)
	ul(class="#{block}")
		each text in linkText
			li(class="#{element}")
				a(class="#{linkClass}", href="#") #{text}

